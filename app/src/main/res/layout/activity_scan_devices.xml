<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.smartcpr.junaid.smartcpr.ScanDevicesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/scan_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:id="@+id/text_scan_title"
        android:textColor="#8b8a8a"/>

    <fragment
        android:id="@+id/fragment_list"
        android:name="com.smartcpr.junaid.smartcpr.ListDevicesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/fragment_button"
        tools:layout="@layout/fragment_list_devices" />

    <fragment
        android:id="@+id/fragment_button"
        android:name="com.smartcpr.junaid.smartcpr.ScanButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_scan_bluetooth" />

</RelativeLayout>

