<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compression_target_header"
        android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/depth_compression_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_above="@id/depth_current_value"
        android:text="@string/compression_depth_target"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/rate_compression_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="@string/compression_rate_target"
        android:textSize="32sp" />

    </RelativeLayout>

</LinearLayout>
